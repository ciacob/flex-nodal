<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
         xmlns:s="library://ns.adobe.com/flex/spark"
         xmlns:mx="library://ns.adobe.com/flex/mx"
         xmlns:local="com.github.ciacob.flexnodal.*"
         xmlns:ui="com.github.ciacob.flexnodal.ui.*"
         xmlns:ctrls="com.github.ciacob.flexnodal.ui.controls.*"
         creationComplete="onCreationComplete(event)">

    <fx:Metadata>
        [Event(name="parameterChange", type="com.github.ciacob.flexnodal.events.EnvelopeEvent")]
        [Event(name="nodesChange", type="com.github.ciacob.flexnodal.events.EnvelopeEvent")]
    </fx:Metadata>

    <fx:Script>
        <![CDATA[
        import mx.events.FlexEvent;
        import com.github.ciacob.flexnodal.utils.EnvelopeGridRenderer;
        import com.github.ciacob.flexnodal.utils.EnvelopeInteractionManager;

        [Bindable]
        public var parameters:Array;

        private var grid:EnvelopeGridRenderer;
        private var interaction:EnvelopeInteractionManager;

        protected function onCreationComplete(event:FlexEvent):void {
            grid = new EnvelopeGridRenderer();
            addElement(grid);

            interaction = new EnvelopeInteractionManager();
        }
        ]]>
    </fx:Script>

    <!-- Example child controls -->
    <ctrls:ScrollZoomControls id="scrollZoom" width="100%" height="30"/>

</s:Group>
