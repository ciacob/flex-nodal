                // Let's see if we need this...
            }

            private static function _purgeDrawable (drawable : UIComponent) : void {
                drawable.graphics.clear();
                drawable.x = drawable.y = 0;

                // Add more as needed...
            }

            private function _onPreinitialize () : void {
                
            }

        ]]>
    </fx:Script>

